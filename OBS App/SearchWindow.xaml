<Window x:Class="ObsHeartRateMonitor.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObsHeartRateMonitor"
        mc:Ignorable="d"
        Title="Search For Sensor" Height="auto" Width="auto" WindowStyle="ToolWindow" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Margin="0,0,5,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Found Sensor:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="TextBoxSensor" Grid.Column="1" Width="50" IsReadOnly="True" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center">-----</TextBox>
        
    </Grid>
</Window>
